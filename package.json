{
    "name": "@userfrosting/vinyl-fs-vpath",
    "version": "0.1.0",
    "description": "Vinyl source for file system with support for virtual paths.",
    "main": "./dist/index.js",
    "module": "./dist/main.js",
    "types": "./dist/main.d.ts",
    "scripts": {
        "pretest": "tsc",
        "test": "is-ci && nyc --reporter=lcov --reporter=text ava || nyc ava",
        "prepublishOnly": "tsc",
        "preversion": "npm test",
        "version": "npm run version:apiDocRefresh && npm run version:changelogBump",
        "postversion": "git push && git push --tags",
        "version:changelogBump": "changelog-updater && git add CHANGELOG.md",
        "version:apiDocRefresh": "api-extractor run && api-documenter markdown -i ./temp -o ./docs/api && git add ./docs/api/*"
    },
    "author": "Jordan Mele <SiliconSoldier@outlook.com.au> (https://github.com/Silic0nS0ldier)",
    "license": "MIT",
    "keywords": [
        "vinyl",
        "vinyl-adapter",
        "gulp",
        "file",
        "file system",
        "fs",
        "vpath",
        "streams"
    ],
    "repository": {
        "type": "git",
        "url": "https://github.com/userfrosting/vinyl-fs-vpath"
    },
    "bugs": {
        "url": "https://github.com/userfrosting/vinyl-fs-vpath/issues"
    },
    "dependencies": {
        "esm": "^3.2.25",
        "glob": "^7.1.4",
        "globby": "^10.0.1",
        "ts-log": "^2.1.4",
        "vinyl": "^2.2.0"
    },
    "devDependencies": {
        "@microsoft/api-documenter": "^7.3.8",
        "@microsoft/api-extractor": "^7.3.2",
        "@types/glob": "^7.1.1",
        "@types/node": "^12.0.4",
        "@types/vinyl": "^2.0.3",
        "ava": "^2.2.0",
        "changelog-updater": "^1.1.0",
        "codecov": "^3.5.0",
        "get-stream": "^5.1.0",
        "is-ci": "^2.0.0",
        "nyc": "^14.1.1",
        "typescript": "^3.5.3"
    },
    "engines": {
        "node": ">=8.0.0"
    },
    "engineStrict": true,
    "ava": {
        "files": [
            "dist/**/*.test.js"
        ],
        "require": [
            "esm"
        ],
        "babel": false
    },
    "nyc": {
        "excludeAfterRemap": false
    }
}
