{
    "$schema": "http://json.schemastore.org/package.json",
    "name": "@userfrosting/vinyl-fs-vpath",
    "version": "1.0.1",
    "description": "Vinyl source for file system with support for virtual paths.",
    "funding": {
        "url": "https://opencollective.com/userfrosting"
    },
    "main": "./dist/index.js",
    "module": "./dist/main.js",
    "types": "./dist/main.d.ts",
    "scripts": {
        "pretest": "tsc",
        "test": "nyc --reporter=text ava",
        "prepublishOnly": "tsc",
        "preversion": "npm test",
        "version": "npm run version:apiDocRefresh && npm run version:changelogBump",
        "postversion": "git push && git push --tags",
        "version:changelogBump": "changelog-updater && git add CHANGELOG.md",
        "version:apiDocRefresh": "api-extractor run && api-documenter markdown -i ./temp -o ./docs/api && git add ./docs/api/*"
    },
    "author": "Jordan Mele <SiliconSoldier@outlook.com.au> (https://github.com/Silic0nS0ldier)",
    "license": "MIT",
    "keywords": [
        "vinyl",
        "vinyl-adapter",
        "gulp",
        "gulpplugin",
        "file",
        "file system",
        "fs",
        "vpath",
        "streams"
    ],
    "repository": {
        "type": "git",
        "url": "https://github.com/userfrosting/vinyl-fs-vpath"
    },
    "bugs": {
        "url": "https://github.com/userfrosting/vinyl-fs-vpath/issues"
    },
    "dependencies": {
        "esm": "^3.2.25",
        "globby": "^11.0.0",
        "ts-log": "^2.1.4",
        "vinyl": "^2.2.0",
        "vinyl-fs": "^3.0.3"
    },
    "devDependencies": {
        "@microsoft/api-documenter": "^7.7.12",
        "@microsoft/api-extractor": "^7.7.8",
        "@types/mock-fs": "^4.13.0",
        "@types/node": "^14.0.1",
        "@types/vinyl": "^2.0.4",
        "@types/vinyl-fs": "^2.4.11",
        "ava": "^3.5.0",
        "changelog-updater": "^1.1.0",
        "get-stream": "^6.0.0",
        "mock-fs": "^4.13.0",
        "nyc": "^15.0.0",
        "sort-on": "^4.1.0",
        "typescript": "^4.0.2"
    },
    "engines": {
        "node": ">=10.0.0"
    },
    "engineStrict": true,
    "ava": {
        "files": [
            "dist/**/*.test.js"
        ],
        "require": [
            "esm"
        ]
    }
}
